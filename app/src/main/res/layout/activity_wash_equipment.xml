<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.WashEquipmentFragment">

    <TextView
        android:id="@+id/scopeWashing"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10sp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:text="Scope Washing"
        android:textSize="25sp" />

    <CheckedTextView
        android:id="@+id/scopeDetaislCheckedTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:layout_weight="1"
        android:background="@drawable/rounded_corner"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:checked="false"
        android:gravity="center"
        android:text="  Scope Details"
        android:textSize="25sp" />

    <CheckedTextView
        android:id="@+id/washerCheckedTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:layout_weight="1"
        android:background="@drawable/rounded_corner"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:gravity="center"
        android:text="  Washer"
        android:textSize="25sp" />

    <CheckedTextView
        android:id="@+id/disinfectantCheckedTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:layout_weight="1"
        android:background="@drawable/rounded_corner"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:checked="false"
        android:gravity="center"
        android:text="  Disinfectant"
        android:textSize="25sp" />

    <CheckedTextView
        android:id="@+id/detergentCheckedTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:layout_weight="1"
        android:background="@drawable/rounded_corner"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:gravity="center"
        android:text="  Detergent"
        android:textSize="25sp" />

    <CheckedTextView
        android:id="@+id/dryingCabinetCheckedTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:layout_weight="1"
        android:background="@drawable/rounded_corner"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:gravity="center"
        android:text="  Drying Cabinet"
        android:textSize="25sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="120sp"
        android:layout_weight="0"
        android:text="Done"
        tools:layout_marginRight="20sp" />
</LinearLayout>